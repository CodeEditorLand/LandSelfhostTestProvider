{
	"name": "vscode-selfhost-test-provider",
	"displayName": "VS Code Selfhost Test Provider",
	"version": "0.0.1",
	"private": false,
	"description": "Test provider for the VS Code project",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./dist/extension.js",
	"scripts": {
		"compile": "webpack --config ./build/node-extension.webpack.config.js",
		"postinstall": "vscode-dts main && vscode-dts dev",
		"package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"vscode:prepublish": "npm run package",
		"watch": "webpack --watch --config ./build/node-extension.webpack.config.js"
	},
	"contributes": {
		"commands": [
			{
				"command": "selfhost-test-provider.updateSnapshot",
				"icon": "$(merge)",
				"title": "Update Snapshot"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "selfhost-test-provider.updateSnapshot",
					"when": "false"
				}
			],
			"testing/message/content": [
				{
					"command": "selfhost-test-provider.updateSnapshot",
					"when": "testMessage == isSelfhostSnapshotMessage && !testResultOutdated"
				}
			],
			"testing/message/context": [
				{
					"command": "selfhost-test-provider.updateSnapshot",
					"group": "inline@1",
					"when": "testMessage == isSelfhostSnapshotMessage && !testResultOutdated"
				}
			]
		}
	},
	"activationEvents": [
		"workspaceContains:src/vs/loader.js"
	],
	"dependencies": {
		"@jridgewell/trace-mapping": "^0.3.17",
		"ansi-styles": "^6.2.1",
		"istanbul-to-vscode": "^1.0.1",
		"js-base64": "^3.7.3",
		"split2": "^4.1.0",
		"typescript": "^4.9.3"
	},
	"devDependencies": {
		"@types/node": "^18.11.11",
		"@types/split2": "^3.2.1",
		"ts-loader": "^9.4.2",
		"typescript-esbuild": "latest",
		"vscode-debugprotocol": "^1.49.0",
		"vscode-dts": "^0.3.3",
		"webpack": "^5.76.0",
		"webpack-cli": "^5.0.1"
	},
	"publishConfig": {
		"access": "public"
	},
	"icon": "icon.png",
	"enabledApiProposals": [
		"testObserver",
		"testCoverage"
	],
	"workspaceTrust": {
		"description": "Trust is required to execute tests in the workspace.",
		"request": "onDemand"
	}
}
